<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Home_ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Home_MoreInfoBtnStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/w_b_gray</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosans_fontfamily</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/notosans_fontfamily</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/notosans_fontfamily</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/notosans_fontfamily</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/notosans_fontfamily</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="StaylistBigButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BFTSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>